<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.chengxusheji.domain">

	<class name="PostInfo" table="PostInfo">

          <!-- 主键帖子id -->
          <id name="postInfoId" column="postInfoId">
            <generator class="native"/>
          </id>

          <!-- 简单字符串属性: 帖子标题 -->
          <property
            name="title"
            column="title"
            type="string"
            length="80"
          />

          <!-- 简单字符串属性: 帖子内容 -->
          <property
            name="content"
            column="content"
            type="string"
            length="5000"
          />

          <!-- 简单整型属性: 浏览量 -->
          <property
            name="hitNum"
            column="hitNum"
            type="int"

          />

          <!-- 多对一属性: 发帖人 -->
          <many-to-one name="userObj"
            column="userObj"
            class="UserInfo"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 简单字符串属性: 发帖时间 -->
          <property
            name="addTime"
            column="addTime"
            type="string"
            length="30"
          />


		 
		
	</class>
	
</hibernate-mapping>
 
