<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.chengxusheji.domain">

	<class name="Reply" table="Reply">

          <!-- 主键回复id -->
          <id name="replyId" column="replyId">
            <generator class="native"/>
          </id>

          <!-- 多对一属性: 被回帖子 -->
          <many-to-one name="postInfoObj"
            column="postInfoObj"
            class="PostInfo"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 简单字符串属性: 回复内容 -->
          <property
            name="content"
            column="content"
            type="string"
            length="2000"
          />

          <!-- 多对一属性: 回复人 -->
          <many-to-one name="userObj"
            column="userObj"
            class="UserInfo"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 简单字符串属性: 回复时间 -->
          <property
            name="replyTime"
            column="replyTime"
            type="string"
            length="30"
          />


		 
		
	</class>
	
</hibernate-mapping>
 
