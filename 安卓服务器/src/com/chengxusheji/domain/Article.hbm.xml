<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.chengxusheji.domain">

	<class name="Article" table="Article">

          <!-- 主键文章id -->
          <id name="articleId" column="articleId">
            <generator class="native"/>
          </id>

          <!-- 简单字符串属性: 标题 -->
          <property
            name="title"
            column="title"
            type="string"
            length="20"
          />

          <!-- 多对一属性: 文章分类 -->
          <many-to-one name="articleClassObj"
            column="articleClassObj"
            class="ArticleClass"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 简单字符串属性: 内容 -->
          <property
            name="content"
            column="content"
            type="string"
            length="5000"
          />

          <!-- 简单整型属性: 点击率 -->
          <property
            name="hitNum"
            column="hitNum"
            type="int"

          />

          <!-- 多对一属性: 发布用户 -->
          <many-to-one name="userObj"
            column="userObj"
            class="UserInfo"
            lazy="false"
            outer-join="true"
            cascade="save-update"
          />

          <!-- 简单字符串属性: 发布时间 -->
          <property
            name="addTime"
            column="addTime"
            type="string"
            length="20"
          />


		 
		
	</class>
	
</hibernate-mapping>
 
